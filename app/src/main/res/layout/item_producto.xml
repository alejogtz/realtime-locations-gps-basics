<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/compra_item_nombretextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Descripcion" />

        <ImageView
            android:id="@+id/compra_item_imgview"
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="29dp"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/compra_item_totaltextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="Total"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="211dp"
            tools:layout_editor_absoluteY="0dp" />

        <Spinner
            android:id="@+id/compra_item_cantidadspinner"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="95dp"></Spinner>


        <Button
            android:id="@+id/compra_item_btncomprar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#8BC34A"
            android:text="Pagar"
            tools:layout_editor_absoluteX="229dp"
            tools:layout_editor_absoluteY="156dp" />
    </LinearLayout>
</LinearLayout>
